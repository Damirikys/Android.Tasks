<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <ListView
        android:id="@+id/saved_filters_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="250dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сортировать по дате"/>

                <Spinner
                    android:id="@+id/sort_by_spinner"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sorting"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вывод по дате"/>

                <Switch
                    android:id="@+id/switch_date_picker"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_date_picker"
                android:background="@color/half_lite_gray"
                android:checkedButton="@+id/by_single_date_radio"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="16dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/by_single_date_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="по дате"/>

                <RadioButton
                    android:id="@+id/by_range_date_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="по диапазону"/>

            </RadioGroup>

            <LinearLayout
                android:id="@+id/date_picker_layout"
                android:background="@color/half_lite_gray"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/start_date"
                    android:inputType="date"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="—"/>

                <EditText
                    android:id="@+id/end_date"
                    android:inputType="date"
                    android:enabled="false"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вывод по цвету"/>

                <View
                    android:id="@+id/selected_color_area"
                    android:background="#c6c6c6"
                    android:layout_weight="3"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:alpha="0.3"/>

                <Switch
                    android:id="@+id/switch_color_picker"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="В алфавитном порядке"/>

                <Switch
                    android:id="@+id/alphabetically_switch"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Порядок по"/>

                <RadioGroup
                    android:id="@+id/order_radio_group"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/order_front_radio">

                    <RadioButton
                        android:id="@+id/order_reverse_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Убыванию"/>

                    <RadioButton
                        android:id="@+id/order_front_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Возрастанию"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/filter_save_button"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сохранить"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/filter_apply_button"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Применить"
                    style="@style/Widget.AppCompat.Button.Colored"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>