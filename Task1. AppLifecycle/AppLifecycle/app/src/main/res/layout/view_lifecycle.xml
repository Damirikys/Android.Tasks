<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/view_lifecycle"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/view_lifecycle_status"
            android:padding="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <LinearLayout
            android:weightSum="2"
            android:id="@+id/view_lifecycle_titles"
            android:layout_below="@+id/view_lifecycle_status"
            android:padding="@dimen/text_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/viewgroup_log_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:text="@string/view_log_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/view_lifecycle_titles"
            android:weightSum="2"
            android:layout_margin="@dimen/textview_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viewgroup_log"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:textSize="12sp"
                android:padding="@dimen/text_padding"
                android:layout_margin="@dimen/textview_margin"
                android:background="@color/colorDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/view_log"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:textSize="12sp"
                android:padding="@dimen/text_padding"
                android:layout_margin="@dimen/textview_margin"
                android:background="@color/colorDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</layout>